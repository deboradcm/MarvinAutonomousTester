<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/wandering1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EA4848"
        android:onClick="wandering1"
        android:text="Wandering1"
        android:textColor="#000000"
        android:tag="wandering1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/wandering2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EA4848"
        android:onClick="wandering2"
        android:text="Wandering2"
        android:visibility="gone"
        android:textColor="#000000"
        android:tag="wandering2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/wandering3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EA4848"
        android:onClick="wandering3"
        android:text="Wandering3"
        android:visibility="gone"
        android:textColor="#000000"
        android:tag="wandering3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/northButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000FF"
        android:textColor="#FFFFFF"
        android:tag="northButton"
        android:visibility="gone"
        android:textSize="12sp"
        android:text="North"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/southButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#008000"
        android:textColor="#000000"
        android:tag="southButton"
        android:text="South"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/topLeftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#6495ED"
        android:textColor="#FFFFFF"
        android:tag="topLeftButton"
        android:text="Top Left"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/topRightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#6495ED"
        android:textColor="#FFFFFF"
        android:tag="topRightButton"
        android:text="Top Right"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bottomLeftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FF00"
        android:textColor="#000000"
        android:tag="bottomLeftButton"
        android:text="Bottom Left"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/bottomRightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FF00"
        android:tag="bottomRightButton"
        android:text="Bottom Right"
        android:visibility="gone"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/randomCornerButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Border1"
        android:visibility="visible"
        android:tag="randomCornerButton1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#B0B0B0"/>


    <Button
        android:id="@+id/randomCornerButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Border2"
        android:visibility="gone"
        android:tag="randomCornerButton2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#B0B0B0"/>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.marvin.BackgroundView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>